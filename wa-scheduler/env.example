# --- Database ---
# Local Docker default: postgres/postgres on localhost:5432
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/webpost?schema=public"

# --- Runtime / App ---
NODE_ENV="development"
APP_TIMEZONE="Asia/Pontianak"
STORAGE_PATH="./storage"

# --- API / Scheduler ---
API_PORT="3001"
API_SECRET="change-me-api-secret"
CRON_SECRET="change-me-cron-secret"
SCHEDULER_INTERVAL="60000"
SCHEDULER_JOB_BUFFER_DAYS="30"
SCHEDULER_ENABLED="true"

# --- WhatsApp Integration ---
WHATSAPP_ACCESS_TOKEN=""
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_DEFAULT_DESTINATION_IDENTIFIER=""
WHATSAPP_SESSION_PATH="./baileys_auth_info"
WHATSAPP_RECONNECT_INTERVAL="5000"
WHATSAPP_MAX_RECONNECT_ATTEMPTS="10"
WHATSAPP_TEST_PHONE=""

# --- Logging ---
LOG_LEVEL="info"
LOG_FILE_PATH="./logs"

